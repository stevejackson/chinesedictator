#learn.section
  .contentBox
    .container

      #dropdown
        #tutorial
          %p 
            Hey there! Chinese Dictator will help improve your Chinese listening skills. 

          %ol
            %li Press 'Play' to hear an audio clip.
            %li 
              Type the pinyin for the audio you heard. For example: "ni3 hao3".
              You must have correct tones!
            %li 
              Use the hint button if you can't figure out the appropriate
              word or tone.
            %li
              Once you've successfully completed a dictation, press Enter to move on.
            
          %p If you want to study specific syllables that are challenging you, click 'Show syllable filters'.

        #syllables
          #initials
            %h2 Initials
            %br
            %input{ type: 'button', id: 'initial-all', value: 'All' }
            %input{ type: 'button', id: 'initial-none', value: 'None' }
            %br
            %br

            .initialset
              %input{ type: 'checkbox', id: 'initial1' }
              %label{ for: 'initial1' } b
              %input{ type: 'checkbox', id: 'initial2' }
              %label{ for: 'initial2' } p
              %input{ type: 'checkbox', id: 'initial3' }
              %label{ for: 'initial3' } m
              %input{ type: 'checkbox', id: 'initial4' }
              %label{ for: 'initial4' } f
              %input{ type: 'checkbox', id: 'initial5' }
              %label{ for: 'initial5' } d
              %input{ type: 'checkbox', id: 'initial6' }
              %label{ for: 'initial6' } t
            .initialset
              %input{ type: 'checkbox', id: 'initial7' }
              %label{ for: 'initial7' } n
              %input{ type: 'checkbox', id: 'initial8' }
              %label{ for: 'initial8' } l
              %input{ type: 'checkbox', id: 'initial9' }
              %label{ for: 'initial9' } g
              %input{ type: 'checkbox', id: 'initial10' }
              %label{ for: 'initial10' } k
              %input{ type: 'checkbox', id: 'initial11' }
              %label{ for: 'initial11' } h
              %input{ type: 'checkbox', id: 'initial12' }
              %label{ for: 'initial12' } j
            .initialset
              %input{ type: 'checkbox', id: 'initial13' }
              %label{ for: 'initial13' } q
              %input{ type: 'checkbox', id: 'initial14' }
              %label{ for: 'initial14' } x
              %input{ type: 'checkbox', id: 'initial15' }
              %label{ for: 'initial15' } zh
              %input{ type: 'checkbox', id: 'initial16' }
              %label{ for: 'initial16' } ch
              %input{ type: 'checkbox', id: 'initial17' }
              %label{ for: 'initial17' } sh
              %input{ type: 'checkbox', id: 'initial18' }
              %label{ for: 'initial18' } r
            .initialset
              %input{ type: 'checkbox', id: 'initial19' }
              %label{ for: 'initial19' } z
              %input{ type: 'checkbox', id: 'initial20' }
              %label{ for: 'initial20' } c
              %input{ type: 'checkbox', id: 'initial21' }
              %label{ for: 'initial21' } s



          #finals
            %h2 Finals
            %br
            %input{ type: 'button', id: 'final-all', value: 'All' }
            %input{ type: 'button', id: 'final-none', value: 'None' }
            %br
            %br

            #finalset
              %input{ type: 'checkbox', id: 'check1' }
              %label{ for: 'check1' } aiya
              %input{ type: 'checkbox', id: 'check2' }
              %label{ for: 'check2' } aiya
              %input{ type: 'checkbox', id: 'check3' }
              %label{ for: 'check3' } aiya
          .clear


        %p.showHideTutorial
          %a &#x25B4;&nbsp; Hide tutorial
        %p.showHideSyllable
          %a &#x25B4;&nbsp; Show syllable filters

      .clear

      %ul#difficulty
        %li
          %a.diff1{ :href => '#' }
            = t :beginner
        %li
          %a.diff2{ :href => '#' }
            = t :easy
        %li
          %a.diff3{ :href => '#' }
            = t :medium
        %li
          %a.diff4{ :href => '#' }
            = t :hard
        %li
          %a.diff5{ :href => '#' }
            = t :advanced

      .clear

      #controls
        .half-width.play
          %input.controls-button{ :type => 'button', :value => "#{t :play}" }
        .half-width.hint
          %input.controls-button{ :type => 'button', :value => "#{t :hint}" }

      .clear

      #progressBar
        %span.pbLabel

      #userinputwrapper
        %input#userinput{ :type => 'text' }

      #notifications
        #correctProgress
        #hint
        #translationHanzi
        #translationEnglish
        #instructions
          %input.next.controls-button{ :type => 'button', :value => "#{t :next}" }
          
      #question
        = render :partial => '/dictator/question'
      #audioContent
        %audio#audio{:src => @question.uri }

#tools.section
  .contentBox
    .container
      %p= t(:tools).html_safe

#about.section
  .contentBox
    .container
      %p= t(:about).html_safe

